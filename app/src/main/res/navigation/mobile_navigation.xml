<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.pharmacy.ui.fragments.DashboardFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/navigation_products"
        android:name="com.example.pharmacy.ui.fragments.ProductsFragment"
        android:label="Управление"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.example.pharmacy.ui.fragments.OrdersFragment"
        android:label="Заказы"
        tools:layout="@layout/fragment_orders" />
</navigation>