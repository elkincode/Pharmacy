<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pharmacy">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="fullSensor"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pharmacy">
        <activity
            android:name=".ui.activities.CheckoutActivity"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.Pharmacy.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.activities.CartListActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name=".ui.activities.DrugDetailsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name=".ui.activities.DashboardActivity"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.activities.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.AddDrugActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name=".ui.activities.LaunchScreenActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.Pharmacy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>